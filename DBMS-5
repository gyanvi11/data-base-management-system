create database employees;
use employees;
create table employees ( emp_id int primary key, name varchar(50), dept_id int);
insert into employees values (1, 'Mohitha' , 116),(2,'GYANVI',148),(3,'Ram',143);
select*from mysql.user;
create  user'GYANVI' IDENTIFIED by 'password';
grant select,insert on dcl.* to 'GYANVI';
select * from employees;
GRANT ALL PRIVILEGES 
ON *.* 
TO 'GYANVI';   
REVOKE INSERT 
ON DCL.* FROM 'GYANVI';
REVOKE ALL PRIVILEGES
ON dcl.student
FROM 'GYANVI';
SHOW GRANTS FOR 'GYANVI';
create database teacher;
use teacher;
create table student(std_id int, name varchar(50),dept_id int);
insert into student values (1,'ram',80),(3,'gyanvi',09),(5,'naga',45);
select *from student;
DROP USER 'GYANVI';



